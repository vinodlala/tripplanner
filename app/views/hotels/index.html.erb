<h1>Listing hotels</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Num stars</th>
      <th>Amenities</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.place_id %></td>
        <td><%= hotel.num_stars %></td>
        <td><%= hotel.amenities %></td>
        <td><%= link_to 'Show', hotel %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel) %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

